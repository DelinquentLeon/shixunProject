<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cqu.mapper.AdministratorMapper">
  
  	<!-- 向数据库中添加管理员 -->
  	<insert id="addAdministrator" parameterType="com.cqu.pojo.administrator">
  		INSERT INTO `project2`.`administrator` (`account`, `password`, `name`) 
  	VALUES (#{account}, #{password}, #{name});
  	</insert>

	<!-- 向数据库中删除管理员 -->
  	<delete id="deleteAdministrator" parameterType="com.cqu.pojo.administrator">
  		delete from `administrator` where account=#{account};
  	</delete>
	
	<!-- 向数据库中更新管理员信息 -->
	<update id="updateAdministrator" parameterType="com.cqu.pojo.administrator">
		update `administrator` set `account`=#{account}, `password`=#{password}, `name`=#{name} where account=#{account};
	</update>
	
	<!-- 查询所有管理员信息 -->
	<select id="findAllAdministrator" resultType="com.cqu.pojo.administrator">
		SELECT * FROM administrator;
	</select>

	<!-- 由账号查询管理员信息 -->
	<select id="findAdministratorByAccount" parameterType="String" resultType="com.cqu.pojo.administrator">
		SELECT * FROM administrator WHERE account = #{account};
	</select>

</mapper>